@model DocumentHall.Models.Order

@{
    ViewBag.Title = "Edit";
}

<h2>Изменение</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Order</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.UserId_)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UserId_)
            @Html.ValidationMessageFor(model => model.UserId_)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Numer)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Numer)
            @Html.ValidationMessageFor(model => model.Numer)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DocId, "Document")
        </div>
        <div class="editor-field">
            @Html.DropDownList("DocId", String.Empty)
            @Html.ValidationMessageFor(model => model.DocId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TypeOrder, "OrderInfo")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TypeOrder", String.Empty)
            @Html.ValidationMessageFor(model => model.TypeOrder)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Control)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Control)
            @Html.ValidationMessageFor(model => model.Control)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
